{
  "compileOnSave": false,
  "angularCompilerOptions": {
    "enableIvy": false
  },
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "target": "ES2022",
    "downlevelIteration": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "reflect-metadata",
      "jest"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./custom_typings"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@app/*": [
        "*"
      ],
      "sunbird-sdk": [
        "../node_modules/@project-sunbird/sunbird-sdk"
      ],
      "sunbird-sdk/*": [
        "../node_modules/@project-sunbird/sunbird-sdk/*"
      ],
      "@project-sunbird/common-consumption": [
        "../node_modules/@project-sunbird/common-consumption"
      ],
      "@project-sunbird/common-consumption/*": [
        "../node_modules/@project-sunbird/common-consumption/*"
      ],
      "@ws-widget/resolver": [
        "library/ws-widget/resolver"
      ],
      "@ws-widget/resolver/*": [
        "library/ws-widget/resolver/*"
      ],
      "@ws-widget/collection": [
        "library/ws-widget/collection"
      ],
      "@ws-widget/collection/*": [
        "library/ws-widget/collection/*"
      ],
      "@ws-widget/utils": [
        "library/ws-widget/utils"
      ],
      "@ws-widget/utils/*": [
        "library/ws-widget/utils/*"
      ],
      "@ws/app": [
        "project/ws/app"
      ],
      "@ws/app/*": [
        "project/ws/app/*"
      ],
      "@ws/author": [
        "project/ws/author"
      ],
      "@ws/author/*": [
        "project/ws/author/*"
      ],
      "@ws/admin": [
        "project/ws/admin"
      ],
      "@ws/admin/*": [
        "project/ws/admin/*"
      ],
      "@ws/analytics": [
        "project/ws/analytics"
      ],
      "@ws/analytics/*": [
        "project/ws/analytics/*"
      ],
      "@ws/viewer": [
        "project/ws/viewer"
      ],
      "@ws/viewer/*": [
        "project/ws/viewer/*"
      ],
      "@ws/learning-hub": [
        "project/ws/learning-hub"
      ],
      "@ws/learning-hub/*": [
        "project/ws/learning-hub/*"
      ],
      "crypto": [
        "node_modules/crypto-browserify"
      ],
      "@aastrika_npmjs/comptency": [
        "../node_modules/@aastrika_npmjs/comptency"
      ],
      "@aastrika_npmjs/comptency/*": [
        "../node_modules/@aastrika_npmjs/comptency/*"
      ],
    },
    "useDefineForClassFields": false
  },
  "include": [
    "src/**/*.ts",
    "./typings/*.d.ts",
    "./content-player/**/*.ts",
    "@ws-widget/utils"
  ],
  "exclude": [
    "node_modules",
    "src/library/**/*.spec.ts",
    "src/**/*.spec.ts",
    "src/**/*.spec.data.ts",
    "src/**/__tests__/*.ts"
  ]
}
